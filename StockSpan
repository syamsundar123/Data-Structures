//Efficient Approach

class Test{
	public static void main(String args[]) {
		
		int arr[] = {7,1,5,3,6,4};
		int n = arr.length;
		
		int profit = stockSpan(arr,n);
		System.out.println(profit);
		
		
	}
	static int stockSpan(int arr[],int n) {
		
		
		int profit = 0;
		for(int i = 1;i<n;i++) {
			if(arr[i]>arr[i-1]) {
				profit += arr[i] - arr[i-1];
				
			}
		}
		return profit;
		
	}
	
	

}
